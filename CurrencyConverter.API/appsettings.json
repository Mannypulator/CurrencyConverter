{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=currencyconverter.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/currency-converter-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "ExternalService": {
    "UseSimulatedData": true,
    "RealTimeEndpoint": "https://api.exchangerates.io/v1/latest",
    "HistoricalEndpoint": "https://api.exchangerates.io/v1/history",
    "ApiKey": "your-external-api-key-here",
    "RequestTimeout": "00:00:30",
    "MaxRetryAttempts": 3,
    "BaseRetryDelay": "00:00:02"
  },
  "RateLimit": {
    "DefaultRequestsPerHour": 1000,
    "PremiumRequestsPerHour": 5000,
    "CleanupInterval": "01:00:00"
  },
  "Cache": {
    "DefaultExpiration": "00:15:00",
    "RealTimeRateExpiration": "00:05:00",
    "HistoricalRateExpiration": "01:00:00"
  },
  "BackgroundServices": {
    "RateUpdateInterval": "00:15:00",
    "HistoricalUpdateInterval": "24:00:00",
    "HealthCheckInterval": "00:05:00"
  },
  "AllowedHosts": "*"
}